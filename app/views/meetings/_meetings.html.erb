<ul class="list-unstyled">
  <% meetings.each do |meeting| %>
    <li class="media mb-3">
      <div class="media-body">
        <div class="card">
          <p>開催者: <%= link_to meeting.user.name, user_path(meeting.user) %> </p>
          <p>交流会番号: <%= link_to meeting.id, meeting %></p>
          <p>交流会名: <%= meeting.name %></p>
          <p>開催場所: <%= meeting.place %></p>
          <p>開始日時: <%= meeting.start_from %></p>
          <div>
            <% if current_user == meeting.user %>
              <%= link_to '編集', edit_meeting_path(meeting), class: 'btn btn-sm btn-primary' %>
              <%= link_to "削除", meeting, method: :delete, data: { confirm: "本当によろしいですか？"}, class: 'btn btn-danger btn-sm' %>
            <% end %>
          </div>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate meetings %>
</ul>