<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <div class="media-body">
          <div class="card">
            <p>ユーザ名: <%= user.name %></p>
            <p>プロフィール: <%= safe_join(user.profile.split("\n"),tag(:br)) %></p>
            <p><%= link_to 'View profile', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>