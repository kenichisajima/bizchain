<div class="row card">
  <div class="col-sm-12">
    <ul class="nav nav-tabs nav-justified mb-4">
      <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link">ユーザプロフィール</a></li>
      <li class="nav-item"><a href="<%= meetings_user_path(@user) %>" class="nav-link">開催交流会</a></li>
      <li class="nav-item"><a href="<%= participating_meetings_user_path(@user) %>" class="nav-link">参加交流会</a></li>
    </ul>
    <div>
      <p>ユーザ名: <%= @user.name %> </p>
      <p>プロフィール: <%= safe_join(@user.profile.split("\n"),tag(:br)) %> </p>
      <p>
        <% if current_user == @user %>
          <%= link_to 'プロフィールを編集する', edit_user_path, class: 'btn btn-lg btn-primary' %>
        <% end %>
      </p>
    </div>
  </div>
</div>