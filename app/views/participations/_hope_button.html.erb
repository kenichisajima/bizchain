<% if current_user.hope?(meeting) %>
    <%= form_with(model: current_user.participations.find_by(meeting_id: meeting.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :meeting_id, meeting.id %>
      <%= hidden_field_tag :user_id, meeting.user_id %>
      <%= f.submit '参加希望解除', class: 'btn btn-danger' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.participations.build, local: true) do |f| %>
      <%= hidden_field_tag :meeting_id, meeting.id %>
      <%= hidden_field_tag :user_id, meeting.user_id %>
      <%= f.submit '参加希望', class: 'btn btn-primary' %>
    <% end %>
  <% end %>